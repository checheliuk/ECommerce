    <div rel="v:address"><div typeof="v:Address"><span property="v:street-address" content="г. Винница ул. Коцюбинского 70, Торговый центр 'Петроцентр', второй этаж - магазин Nitsak"></span></div></div>
    <span property="v:tel" content="063 825-14981"></span>
    <span property="v:url" content="@Resource.UrlSite"></span>
</div>

