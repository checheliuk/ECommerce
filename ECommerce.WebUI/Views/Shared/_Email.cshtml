<div class="subscribe-form" id="id="email-subscrib-box"">
    <div class="clearfix">
        <div class="input-group input-light">
            @Html.TextBox("email", null, new { @class = "form-control", placeholder = Resource.YourEmail, pattern = "[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,3}$", type = "email" })
            <span class="input-group-addon"><i class="icon-mail"></i></span>
        </div>
        <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_c7103e2c981361a6639545bd5_1194bb7544" tabindex="-1"></div>
        <button class="btn btn-primary" type="button" onclick="addEmail()"><i class="icon-check"></i></button>
    </div>
    <span class="form-text text-sm text-white">@Resource.SubscribeFooterText</span>
</div>
<div class="text-center" id="email-subscrib-box" style="display:none;"><button class="btn btn-outline-primary" type="button" disabled="">@Resource.SubscribText</button></div>
